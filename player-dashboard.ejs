<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Dashboard</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            background: #e0f2f1;  /* Light teal background */
            margin: 0;
            padding: 20px;
            color: #004d40;  /* Dark teal text */
        }
        .container {
            width: 85%;
            max-width: 1000px;
            margin: auto;
            background: #ffffff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Headings */
        h2, h3 {
            text-align: center;
            color: #00796b;  /* Teal green for headings */
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 12px 20px;
            margin: 8px 5px;
            background: #00897b;  /* Teal green button */
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #00695c;  /* Darker teal on hover */
        }

        /* Forms */
        form {
            display: flex;
            justify-content: center;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }
        input, select {
            padding: 10px;
            border: 2px solid #4db6ac;  /* Light teal border */
            border-radius: 6px;
            outline: none;
            font-size: 16px;
            background: #e0f2f1;  /* Light teal input background */
            color: #004d40;
        }
        input::placeholder {
            color: #00796b;  /* Teal green placeholder */
        }

        /* Tables */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: #e0f7fa;  /* Soft teal for table background */
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 12px;
            text-align: center;
        }
        th {
            background: #00897b;
            color: white;
        }
        td {
            border-bottom: 1px solid #b2dfdb;
        }
        tr:hover {
            background: #b2dfdb;  /* Light teal hover effect */
        }

        /* Footer Actions */
        .footer-actions {
            text-align: center;
            margin-top: 30px;
            padding-top: 15px;
            border-top: 2px solid #00897b;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Player Dashboard</h2>

        <h3>Create a Sport Session</h3>
        <form action="/sessions" method="POST">
            <select name="sport_id" required>
                <% sports.forEach(sport => { %>
                    <option value="<%= sport.id %>"><%= sport.name %></option>
                <% }) %>
            </select>
            <input type="text" name="venue" placeholder="Enter venue" required>
            <input type="datetime-local" name="date_time" required>
            <button type="submit" class="btn">Create Session</button>
        </form>

        <h3>Joined Sessions</h3>
        <table>
            <tr>
                <th>Sport</th>
                <th>Venue</th>
                <th>Date & Time</th>
            </tr>
            <% joinedSessions.forEach(session => { %>
                <tr>
                    <td><%= session.sport_name %></td>
                    <td><%= session.venue %></td>
                    <td><%= new Date(session.date_time).toLocaleString() %></td>
                </tr>
            <% }) %>
        </table>

        <h3>Available Sessions</h3>
        <table>
            <tr>
                <th>Sport</th>
                <th>Venue</th>
                <th>Date & Time</th>
                <th>Action</th>
            </tr>
            <% sessions.forEach(session => { %>
                <tr>
                    <td><%= session.sport_name %></td>
                    <td><%= session.venue %></td>
                    <td><%= new Date(session.date_time).toLocaleString() %></td>
                    <td>
                        <form action="/sessions/join/<%= session.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn">Join</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>

        <div class="footer-actions">
            <a href="/logout" class="btn">Logout</a>
            <a href="/change-password" class="btn">Change Password</a>
        </div>
    </div>

</body>
</html>
